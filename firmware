#include <Servo.h>

// Definire senzori LDR
#define LDR_TL A0  // Stânga-Sus
#define LDR_TR A1  // Dreapta-Sus
#define LDR_BL A2  // Stânga-Jos
#define LDR_BR A3  // Dreapta-Jos

// Definire servomotoare
Servo servoX;
Servo servoY;

// Poziții inițiale servomotoare
int posX = 90;
int posY = 90;

void setup() {
    Serial.begin(9600);
    servoX.attach(9);
    servoY.attach(10);
    servoX.write(posX);
    servoY.write(posY);
    delay(500);
}

void loop() {
    // Citire valori LDR
    int TL = analogRead(LDR_TL);
    int TR = analogRead(LDR_TR);
    int BL = analogRead(LDR_BL);
    int BR = analogRead(LDR_BR);
    
    // Calcul diferențe
    int deltaX = (TR + BR) - (TL + BL);
    int deltaY = (TL + TR) - (BL + BR);

    // Ajustare poziții
    if (abs(deltaX) > 10) {
        posX += (deltaX > 0) ? 1 : -1;
        posX = constrain(posX, 0, 180);
        servoX.write(posX);
    }
    
    if (abs(deltaY) > 10) {
        posY += (deltaY > 0) ? 1 : -1;
        posY = constrain(posY, 0, 180);
        servoY.write(posY);
    }
    
    delay(100);
}

